<h1>Éditer un potin </h1><br><br>
<div class="container col-md-8 order-md-1">
     <%= form_tag url_for(action: 'update'), method: "patch" do %>

     <div class="form-group">
           <%= label_tag 'Titre :' %>
           <%= text_field_tag 'title', @gossip.title, class: "form-control"  %>
     </div>

     <div class="form">
           <%= label_tag 'Contenu :' %>
           <%= text_area_tag 'content', @gossip.content, class: "form-control" %>
     </div>

     <div class="form-group">
           <%= submit_tag "Éditer", class: "btn btn-lg btn-block btn-primary mt-3" %>
     </div>

     <% end %>
