<h1>Inscrivez-vous</h1>
<div class="container col-md-8 order-md-1">
<%= form_tag url_for(action: 'create'), method: 'post' %>
<div class="form-group">
<%= label_tag 'Nom :' %>
<%= text_field_tag 'last_name', @user.last_name, class: "form-control"  %><br>

<%= label_tag 'PrÃ©nom :' %>
<%= text_field_tag 'first_name', @user.first_name, class: "form-control"  %><br>

<%= label_tag 'E-mail :' %>
<%= text_field_tag 'email', @user.email, class: "form-control"  %><br>

<%= label_tag 'Mot de passe:' %>
<%= password_field_tag 'password', @user.password, class: "form-control"  %><br>

<%= label_tag 'Confirmation de mot passe :' %>
<%= password_field_tag 'password_confirmation', @user.password, class: "form-control"  %><br>

<%= label_tag 'Ville :' %>
    <select class="form-control" name="city">
      <% City.all.each_with_index do |city_id, index|%>
      <option value="<%= index + 1 %>"><%= city_id.name %></option>
      <% end %>
      </select><br>
<%= label_tag 'Age :' %>
<%= text_field_tag 'age', @user.age, class: "form-control"  %><br>

<%= label_tag 'Description :' %>
<%= text_field_tag 'description', @user.description, class: "form-control"  %><br>

<div class="form-group">
      <%= submit_tag "Je m'inscris", class: "btn btn-lg btn-block btn-primary mt-3" %>
</div>

</div>
